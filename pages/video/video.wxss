/* 头部区域 */
.videoContainer .header {
  display: flex;
  padding: 20rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  border: 1rpx solid #eee;
   /*flex-grow: 可拉伸 flex-shrink： 可压缩 flex-basis: 当前元素的宽度*/
  /*flex默认值: flex-grow: 0, flex-shrink: 1, flex-basis: auto*/
  /*flex:1  flex-grow: 1, flex-shrink: 1, flex-basis: 0%*/
  /*flex:auto  flex-grow: 1, flex-shrink: 1, flex-basis: auto*/
  /*flex: 1会导致父元素宽度自动为100%*/
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  /*我们没设置search高度，继承父高度，父高度同图片高度*/
  line-height: 60rpx;
  color: #d43c33
}


/* 导航区域 */
/* tab头部 */
.navScroll {
  display: flex;
  /* 禁止换行，因为如果横向宽度不够，会自动换行纵向布局*/
  white-space: nowrap;
}
/*隐藏滚动条*/
/* .navScroll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */
.navScroll .navItem {
  margin-bottom: 1rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* navItem的border-bottom 被遮挡bug */
  margin-bottom: 1rpx;
}
.navItem .active {
  border-bottom: 1rpx solid #d43c33;
}
/* tab内容 */
.videoItem {
  padding: 3% 3% 0 3%;
}
.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.comments_praised .btn::after {
  border: none;
}
.comments_praised .item  {
  margin-right: 50rpx;
  position: relative;
}
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}