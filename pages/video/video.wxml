<view class="videoContainer">
  <!-- 头部区域  -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">
      搜索商品
    </view> 
    <image src="/static/images/logo.png"></image>
  </view>

  <!-- 导航区域 -->
  <!-- tab头部 -->
  <scroll-view scroll-x enable-flex scroll-y="true" class="navScroll" enhanced="true" show-scrollbar="{{false}}">
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id" bindtap="changeNav" id="{{item.id}}" data-id="{{item.id}}">
      <view class="navContent {{item.id === navId ? 'active' : ''}}" >
        {{item.name}}
      </view>
    </view>
  </scroll-view>
  <!-- tab内容 -->

</view>
