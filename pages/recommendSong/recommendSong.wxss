/* 头部区域 */
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  /* 子视图自身居中 */
  position: absolute;
  left: calc(50% - 150rpx);
  top: calc(50% - 50rpx);
  width: 300rpx;
  height: 100rpx;

  /* 子视图内容居中 */
  text-align: center;
  line-height: 100rpx;
  color: white;
}
.header .date .day {
  font-size: 38rpx;
}

/* 列表区域 */
.listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 100rpx;
  background-color: white;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .changeMore {
  float: right;
}
/* 列表内容区域 */
.listScroll {
  height: calc(100vh - 300rpx - 80rpx);
}
.listScroll .scrollItem {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.listScroll .scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  width: calc(100vw - 220rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.musicInfo .name {
  font-size: 24rpx;
}
.scrollItem .btn {
  position: relative;
  padding: 16rpx 0;
  width: 80rpx;
  background-color: white;
}
.btn .iconfont {
  float: right;
}


