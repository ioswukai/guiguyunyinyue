.searchContainer {
  padding: 0rpx 20rpx;
}
/* 头部搜索区 */
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 0rpx;
}
.searchInput {
  display: flex;
  align-items: center;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.searchInput input {
  margin-left: 20rpx;
  flex: 1
}
.searchIcon {
  margin-left: 20rpx;
}
.placeholder {
  font-size: 28rpx;
}
.cancel {
  width: 100rpx;
  text-align: center;
}

/* 热搜榜 */
.title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  /* 流式布局 */
  display: flex;
  /* 需要换行 */ 
  flex-wrap: wrap;
}
.hotItem {
  /* 分为两列 */
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}
.hotItem .iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
