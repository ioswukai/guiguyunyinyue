.songDetailContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 底座 */
.circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: white;
  margin: 10rpx 0;
}
/* 摇杆 */
.needle {
  position: relative;
  left: 60rpx;
  top: -40rpx;
  z-index: 99;
  width: 192rpx;
  height: 274rpx; 
  flex-shrink: 0;
  flex-grow: 0;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}
.needleRotate {
  transform: rotate(0deg);
}
/* 磁盘 */
.discContainer {
  width: 596rpx;
  height: 596rpx;
  flex-shrink: 0;
  flex-grow: 0;
  position: relative;
  top: -170rpx;
}
.discContainer .disc {
  width: 100%;
  height: 100%;
}
.discContainer .musicImg {
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
  /* 子视图自身居中 */
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
/* 定义动画的class样式类 */
.discAnimation {
  /*
  animation: 接收参数有
  必填的
  动画名称：disc
  动画时间：4s
  
  可选的
  动画过渡：linear 平滑过渡
  是否为无限循环：infinite 无限循环
  */
  animation: disc 4s linear infinite;
  /* 动画延时1s执行 */
  animation-delay: 1s;
}
/*
  @keyframes: 设置动画帧
    1) from to
      - 适用于简单的动画，只有起始帧和结束帧
      - 北京 - 上海 ---> 直达
    2) 百分比
      - 多用于复杂的动画，动画不止两帧
      - 北京 - 上海 ---> 北京 -- 天津 --- 深圳 --- 上海
      - 0% - 100%, 中间有多少帧 可以任意拆分

*/
@keyframes disc {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
/* 进度条控制区域 */
.progressControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.barControl {
  position: relative;
  width: 450rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin: auto;
}
.audio-currentTime-Bar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 4rpx;
  background-color: red;
  z-index: 1;
}
.audio-circle {
  position: absolute;
  right: -12rpx;
  top:-4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color:white;
}


/* 底部控制播放区域 */
.musicControl {
  /* 自身的布局 */
  width: 100%;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid white;
  /* 对子元素的布局 */
  display: flex;
}
.musicControl .iconfont {
  flex: 1;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  color: white;
  font-size: 50rpx;
}
.musicControl .big {
  font-size: 80rpx;
}